# Azure Configuration
# Copy this file to .env and fill in your actual values

# Azure Subscription & Tenant
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_TENANT_ID=your-tenant-id-here

# Azure Resource Configuration
AZURE_RESOURCE_GROUP=my-resource-group
AZURE_LOCATION=eastus

# Azure Key Vault (used by multiple scripts)
AZURE_KEYVAULT_NAME=my-keyvault

# Azure Storage Account (for uploads, logs, etc.)
AZURE_STORAGE_ACCOUNT=mystorageaccount
AZURE_STORAGE_CONTAINER=scripts-output

# Cost Management & Export Settings
COST_EXPORT_OUTPUT_PATH=./exports
COST_START_DATE=2025-01-01
COST_END_DATE=2025-01-31

# VM/VMSS Configuration
AZURE_VM_NAME=my-vm
AZURE_VMSS_NAME=my-vmss
AZURE_VM_RESOURCE_GROUP=my-vm-rg

# Network Configuration
AZURE_VNET_NAME=my-vnet
AZURE_SUBNET_NAME=default
AZURE_NSG_NAME=my-nsg

# SQL Configuration
AZURE_SQL_SERVER=mysqlserver.database.windows.net
AZURE_SQL_DATABASE=mydatabase
AZURE_SQL_ADMIN_USER=sqladmin
AZURE_SQL_ADMIN_PASSWORD=

# Service Fabric (if applicable)
SF_CLUSTER_NAME=my-sf-cluster
SF_CLUSTER_RESOURCE_GROUP=sf-rg

# DevOps Configuration
AZURE_DEVOPS_ORG=myorg
AZURE_DEVOPS_PROJECT=myproject
AZURE_DEVOPS_PAT=

# Kusto/Data Explorer
KUSTO_CLUSTER_URL=https://mycluster.region.kusto.windows.net
KUSTO_DATABASE=mydatabase

# Microsoft Graph API
MS_GRAPH_CLIENT_ID=
MS_GRAPH_CLIENT_SECRET=
MS_GRAPH_TENANT_ID=

# Authentication Settings
USE_DEVICE_CODE=false
USE_MANAGED_IDENTITY=false
FORCE_LOGIN=false

# Output & Logging
OUTPUT_PATH=./output
LOG_LEVEL=Information
DEBUG_MODE=false

# Script Execution Settings
EXECUTION_TIMEOUT_SECONDS=3600
MAX_RETRY_ATTEMPTS=3
CONFIRM_DESTRUCTIVE_OPERATIONS=true

# Local Development
LOCAL_TEMP_PATH=./temp
LOCAL_CACHE_PATH=./.cache
